{
  "name": "ring-ease-server",
  "version": "1.0.0",
  "description": "Ring Ease Server",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"cd client && npm start\"",
    "pm2": "pm2 --name='ring-ease' start npm -- start",    
    "server": "nodemon bin/dev",
    "client": "node start-client.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && babel server -s -d dist",
    "production": "npm run build && nodemon bin/production",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "ahadcove",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.15.3",
    "nodemailer": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "body-parser": "^1.17.2",
    "concurrently": "^3.5.0",
    "dotenv": "^4.0.0",
    "mongoose": "^4.11.5",
    "nodemon": "^1.11.0"
  }
}
